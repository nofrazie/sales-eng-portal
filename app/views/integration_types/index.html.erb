<div class="row">
  <div class="col-md-8">
    <table class="table table-bordered table-hover" id="integration_types">
      <thead>
        <tr>
          <th>Integraion Types</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @integration_types %>
      </tbody>
    </table>

    <table class="table table-bordered table-hover">
      <%= form_for(@integration_type, remote: true) do |f| %>
        <tr>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
            <%= f.submit "Add", class: 'btn btn-xs btn-default', id: "add-btn" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
