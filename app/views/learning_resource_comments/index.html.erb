<h1>Learning Resource Comments</h1>

<table>
  <thead>
    <tr>
      <th>Learning resource</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @learning_resource_comments.each do |learning_resource_comment| %>
      <tr>
        <td><%= learning_resource_comment.learning_resource_id %></td>
        <td><%= learning_resource_comment.body %></td>
        <td><%= learning_resource_comment.user %></td>
        <td><%= link_to 'Show', learning_resource_comment %></td>
        <td><%= link_to 'Edit', edit_learning_resource_comment_path(learning_resource_comment) %></td>
        <td><%= link_to 'Destroy', learning_resource_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

