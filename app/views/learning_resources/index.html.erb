<h1 class="page-header">Learning Resources</h1>
<%= link_to "New Learning Resource", new_learning_resource_path, class: "btn btn-primary" %>

<% @learning_resources.each do |lr| %>
  <div class="resource row clearfix">
    <h3>
      <%= link_to lr.title, lr %><br>
      <small class="author">Submitted <%= time_ago_in_words(lr.created_at) %> by <%= lr.user.profile_name %></small>
    </h3>
  </div>
<% end %>
