<% provide(:title, @integration.name) %>

<!-- Main Page Content -->
<h1 class="page-header"><%= @integration.name %></h1>
<%= image_tag @integration.picture %>
<h3><%= @integration.integration_type.name %></h3>
<p>Built by: <%= @integration.built_by %></p>
<h5>Description:</h5>
<p><%= @integration.description %><p>
<p>Status: <%= @integration.status %></p>
<h5>Summary:</h5>
<p><%= @integration.summary %></p>
<h5>Created on: <%= @integration.created_at.strftime("%m/%d/%Y") %></h5>
<h5>Last updated: <%= @integration.updated_at.strftime("%I:%M %p, %m/%d/%Y") %></h5>


<!-- SIDEBAR CONTENT -->
<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked">
    <li><%= link_to "Edit Integraion", edit_integration_path(@integration) %></li>
    <li>
      <% if current_user.admin? && !current_user?(@user) %>
        <%= link_to "Delete", @integration, method: :delete, data: { confirm: "Do you really want to delete this integration?" } %>
      <% end %>
    </li>
  </ul>
  <h6><%= link_to "Integration Settings", integration_types_path %></h6>
<% end %>
